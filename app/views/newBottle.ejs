<%- include('./partials/header') %>

    <form class="container m-4 mt-4" action="/nouvelle_bouteille" method="post">
        <div class="field">
            <label class="label" for="label">Nom</label>
            <div class="control">
              <input class="input" type="text" id="label" name="label" placeholder="Château Pétrus" required>
            </div>
        </div>

        <div class="field">
            <label class="label" for="appellation">Appellation</label>
            <div class="control">
                <div class="select">
                    <select id="appellation" name="appellation_id" required>
                        <option value="" selected disabled hidden></option>
                        <% appellations.forEach(appellation => { %>
                            <option value=<%= appellation.id %> >
                                <%= appellation.label %>
                            </option>
                        <% }) %>
                    </select>
                </div>
            </div>
        </div>

        <div class="field">
            <label class="label" for="color">Type</label>
            <div class="control">
                <div class="select">
                    <select id="color" name="color" required>
                        <option selected disabled hidden></option>
                        <option value="blanc">Blanc</option>
                        <option value="rose">Rosé</option>
                        <option value="rouge">Rouge</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="field is-grouped">
            <div class="field mr-4">
                <label class="label" for="millesime">Millésime</label>
                <div class="control">
                    <input class="input" type="number"  id="millesime" name="millesime" placeholder="2020" required min="1975">
                </div>
            </div>

            <div class="field">
                <label class="label" for="guard">Viellissement</label>
                <div class="select">
                    <select id="guard" name="guard">
                        <option selected disabled hidden></option>
                        <% for (const property in guard) {%>
                            <option value=<%= property %> >
                                <%= guard[property] %>
                            </option>
                        <% } %>
                    </select>
                </div>
            </div>
        </div>

        <div class="field is-grouped">
            <div class="field mr-4">
                <label class="label" for="quantity">Quantité</label>
                <div class="control">
                    <input class="input" type="number" id="quantity" name="quantity" placeholder="1" min="0" required>
                </div>
            </div>

            <div class="field">
                <label class="label" for="rack">Etagère</label>
                <div class="select">
                    <select id="rack" name="rack">
                        <option selected disabled hidden></option>
                        <option value="0">0</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="field">
            <label class="label" for="comment">Commentaire</label>
            <div class="control">
                <textarea class="textarea" id="comment" name="comment" placeholder="Commentaire"></textarea>
            </div>
        </div>

        <div class="field is-grouped is-grouped-centered">
            <div class="control">
              <button class="button is-primary" type="submit">Ajouter</button>
            </div>
            <div class="control">
              <a href="/" class="button is-light">Annuler</a>
            </div>
        </div>

    </form>

<%- include('./partials/footer') %>
